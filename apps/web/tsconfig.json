{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "noEmit": true,
    "outDir": null,
    "rootDir": null,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "next.config.ts", "drizzle.config.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
